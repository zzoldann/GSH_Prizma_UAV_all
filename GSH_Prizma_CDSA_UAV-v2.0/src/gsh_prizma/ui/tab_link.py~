try:
    from PySide6 import QtWidgets, QtCore
except Exception:
    QtWidgets = None
    QtCore = None

def _pf_rows(form):
    rows = []
    try:
        for i in range(form.rowCount()):
            li = form.itemAt(i, QtWidgets.QFormLayout.LabelRole)
            fi = form.itemAt(i, QtWidgets.QFormLayout.FieldRole)
            lblw = li.widget() if li is not None else None
            fldw = fi.widget() if fi is not None else None
            lbl  = ""
            try:
                if lblw: lbl = lblw.text().strip()
            except Exception:
                lbl = ""
            rows.append((i, lblw, fldw, lbl))
    except Exception:
        pass
    return rows

def _pf_get_field(form, *label_names):
    for i, lblw, fldw, lbl in _pf_rows(form):
        if lbl in label_names:
            return fldw
    return None

def _pf_get_labelwidget(form, *label_names):
    for i, lblw, fldw, lbl in _pf_rows(form):
        if lbl in label_names:
            return lblw
    return None

def _pf_first_form(widget):
    try:
        return widget.findChildren(QtWidgets.QFormLayout)[0]
    except Exception:
        return None

def _pf_apply_finetune(self):
    if QtWidgets is None:
        return
    form = _pf_first_form(self)
    if form is None:
        return

    # 1) Убрать скобки у f / h_TX / h_RX (только у них)
    try:
        for i, lblw, fldw, lbl in _pf_rows(form):
            if not lblw: 
                continue
            if lbl.startswith("f") and lbl.split("(")[0].strip() == "f" and "(" in lbl:
                lblw.setText("f")
            if lbl.startswith("h_TX") and lbl.split("(")[0].strip() == "h_TX" and "(" in lbl:
                lblw.setText("h_TX")
            if lbl.startswith("h_RX") and lbl.split("(")[0].strip() == "h_RX" and "(" in lbl:
                lblw.setText("h_RX")
    except Exception:
        pass

    # 2) Модем шириной как Антенна TX
    try:
        w_ant_tx = _pf_get_field(form, "Антенна TX")
        w_modem  = _pf_get_field(form, "Модем", "Модем/Профиль")
        if w_ant_tx and w_modem and hasattr(w_ant_tx, "sizeHint"):
            base = max(60, w_ant_tx.sizeHint().width())
            w_modem.setMinimumWidth(base); w_modem.setMaximumWidth(base)
    except Exception:
        pass

    # 3) Среда шириной как Тип
    try:
        w_type = _pf_get_field(form, "Тип")
        w_env  = _pf_get_field(form, "Среда")
        if w_type and w_env and hasattr(w_type, "sizeHint"):
            base = max(60, w_type.sizeHint().width())
            w_env.setMinimumWidth(base); w_env.setMaximumWidth(base)
    except Exception:
        pass

    # 4) "Полоса В" шириной как "NF"
    try:
        w_nf = _pf_get_field(form, "NF")
        w_bw = _pf_get_field(form, "Полоса В")
        if w_nf and w_bw and hasattr(w_nf, "sizeHint"):
            base = max(60, w_nf.sizeHint().width())
            w_bw.setMinimumWidth(base); w_bw.setMaximumWidth(base)
    except Exception:
        pass

    # 5) "Модель" и "f" шириной как "h_TX"
    try:
        # после п.1 метки для h_TX уже без скобок
        w_h_tx = _pf_get_field(form, "h_TX", "h_TX (м)", "h_TX (m)")
        if w_h_tx and hasattr(w_h_tx, "sizeHint"):
            base = max(60, w_h_tx.sizeHint().width())
            for lab in ("Модель", "f", "f (МГц)", "f (MHz)"):
                w = _pf_get_field(form, lab)
                if w:
                    w.setMinimumWidth(base); w.setMaximumWidth(base)
    except Exception:
        pass

def _pf_install_finetune():
    try:
        LinkBudgetTab
    except NameError:
        return
    orig_init = getattr(LinkBudgetTab, "__init__", None)
    if not callable(orig_init):
        return
    def wrapped(self, *a, **kw):
        orig_init(self, *a, **kw)
        # запускаем после прочих отложенных правок — чуть позже
        try:
            QtCore.QTimer.singleShot(80, lambda: _pf_apply_finetune(self))
        except Exception:
            pass
    LinkBudgetTab.__init__ = wrapped

try:
    _pf_install_finetune()
except Exception:
    pass
# --- [/AUTO] profiles_finetune_v2 ---


# --- [AUTO] profiles_finetune_v3 ---
try:
    from PySide6 import QtWidgets, QtCore, QtGui
except Exception:
    QtWidgets = None
    QtCore = None
    QtGui = None

def _pf_rows(form):
    rows = []
    try:
        for i in range(form.rowCount()):
            li = form.itemAt(i, QtWidgets.QFormLayout.LabelRole)
            fi = form.itemAt(i, QtWidgets.QFormLayout.FieldRole)
            lblw = li.widget() if li is not None else None
            fldw = fi.widget() if fi is not None else None
            lbl  = ""
            try:
                if lblw: lbl = lblw.text().strip()
            except Exception:
                lbl = ""
            rows.append((i, lblw, fldw, lbl))
    except Exception:
        pass
    return rows

def _pf_get_field(form, *label_names):
    for i, lblw, fldw, lbl in _pf_rows(form):
        if lbl in label_names:
            return fldw
    return None

def _pf_first_form(widget):
    try:
        return widget.findChildren(QtWidgets.QFormLayout)[0]
    except Exception:
        return None

def _to_float2(s: str):
    try:
        return float(s.replace(',', '.'))
    except Exception:
        return None

def _apply_two_decimals(widget):
    # QDoubleSpinBox
    if hasattr(widget, "setDecimals"):
        try:
            widget.setDecimals(2)
            # отключим «дёрганье» при вводе и зафиксируем отображение .2f
            if hasattr(widget, "setKeyboardTracking"):
                widget.setKeyboardTracking(False)
        except Exception:
            pass
        return
    # QLineEdit
    if QtGui and isinstance(widget, QtWidgets.QLineEdit):
        try:
            val = QtGui.QDoubleValidator()
            val.setNotation(QtGui.QDoubleValidator.StandardNotation)
            # ограничение по точности эмулируем форматированием
            widget.setValidator(val)
            def _fmt():
                v = _to_float2(widget.text())
                if v is not None:
                    widget.setText(f"{v:.2f}")
            widget.editingFinished.connect(_fmt)
        except Exception:
            pass

def _pf_apply_v3(self):
    if QtWidgets is None:
        return
    form = _pf_first_form(self)
    if form is None:
        return

    # 1) decimals=2 для h_TX, h_RX, f
    for lab in ("h_TX", "h_TX (м)", "h_TX (m)"):
        w = _pf_get_field(form, lab)
        if w: _apply_two_decimals(w)
    for lab in ("h_RX", "h_RX (м)", "h_RX (m)"):
        w = _pf_get_field(form, lab)
        if w: _apply_two_decimals(w)
    for lab in ("f", "f (МГц)", "f (MHz)"):
        w = _pf_get_field(form, lab)
        if w: _apply_two_decimals(w)

    # 2) Ширины: Антенна TX/RX = ширине Модем
    modem = _pf_get_field(form, "Модем", "Модем/Профиль")
    ant_tx = _pf_get_field(form, "Антенна TX")
    ant_rx = _pf_get_field(form, "Антенна RX")
    try:
        if modem and hasattr(modem, "sizeHint"):
            base = max(60, modem.sizeHint().width())
            for w in (ant_tx, ant_rx):
                if w:
                    w.setMinimumWidth(base); w.setMaximumWidth(base)
    except Exception:
        pass

def _pf_install_v3():
    try:
        LinkBudgetTab
    except NameError:
        return
    orig_init = getattr(LinkBudgetTab, "__init__", None)
    if not callable(orig_init):
        return
    def wrapped(self, *a, **kw):
        orig_init(self, *a, **kw)
        # запустить после прочих отложенных правок
        try:
            QtCore.QTimer.singleShot(120, lambda: _pf_apply_v3(self))
        except Exception:
            pass
    LinkBudgetTab.__init__ = wrapped

try:
    _pf_install_v3()
except Exception:
    pass
